<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.AddEmployeeDialogController" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Full Name:"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1"/>
    <Label text="Position:" GridPane.rowIndex="1"/>
    <ComboBox fx:id="positionComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Address:" GridPane.rowIndex="2"/>
    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Phone Number:" GridPane.rowIndex="3"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Salary:" GridPane.rowIndex="4"/>
    <TextField fx:id="salaryField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="Save" onAction="#onSaveClick" GridPane.rowIndex="5"/>
    <Button text="Cancel" onAction="#onCancelClick" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>
