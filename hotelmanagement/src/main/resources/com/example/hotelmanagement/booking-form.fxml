<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hotelmanagement.BookingController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Phone Number:"/>
    <TextField fx:id="phoneNumberField" GridPane.columnIndex="1"/>
    <Button text="Check In" onAction="#onCheckInButtonClick" GridPane.columnIndex="2"/>

    <Label text="Full Name:" GridPane.rowIndex="1"/>
    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Address:" GridPane.rowIndex="2"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Birth Date (dd.mm.yyyy):" GridPane.rowIndex="3"/>
    <DatePicker fx:id="birthDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Room Number:" GridPane.rowIndex="4"/>
    <TextField fx:id="roomNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Settlement Date:" GridPane.rowIndex="5"/>
    <DatePicker fx:id="settlementDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Departure Date:" GridPane.rowIndex="6"/>
    <DatePicker fx:id="departureDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button text="Submit" onAction="#onBookRoomButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Button text="Back" onAction="#onBackButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
</GridPane>
