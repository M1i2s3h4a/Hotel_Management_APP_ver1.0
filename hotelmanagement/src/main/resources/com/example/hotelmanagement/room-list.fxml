<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.RoomListController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <TableView fx:id="roomTable" prefWidth="600">
        <columns>
            <TableColumn fx:id="roomNumberColumn" text="Room Number" prefWidth="100"/>
            <TableColumn fx:id="bedsColumn" text="Beds" prefWidth="100"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="amenitiesColumn" text="Amenities" prefWidth="150"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="Add Room" fx:id="addButton" prefWidth="100"/>
    <Button text="Edit Room" fx:id="editButton" prefWidth="100"/>
    <Button text="Delete Room" fx:id="deleteButton" prefWidth="100"/>
    <Button text="Logout" onAction="#onLogoutClick" prefWidth="100"/>
</VBox>
