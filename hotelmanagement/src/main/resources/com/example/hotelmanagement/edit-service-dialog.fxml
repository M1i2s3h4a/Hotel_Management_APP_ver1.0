<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.EditServiceDialogController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Name:"/>
    <TextField fx:id="nameField" prefWidth="100"/>

    <Label text="Price:"/>
    <TextField fx:id="priceField" prefWidth="100"/>

    <Button text="Save" onAction="#onSaveClick" prefWidth="100"/>
    <Button text="Cancel" onAction="#onCancelClick" prefWidth="100"/>
</VBox>
